---
const images = [
  { src: "/images/image2.jpg", alt: "Treatment room with massage tables and natural wood walls" },
  { src: "/images/image3.jpg", alt: "Massage table with lotus flower decoration" },
  { src: "/images/image8.png", alt: "Second treatment room with artwork" },
  { src: "/images/image5.jpg", alt: "Comfortable waiting area" }
];
---

<section class="space section">
  <div class="container">
    <div class="space__header">
      <span class="space__label">The Space</span>
      <h2 class="space__title">Your Sanctuary Awaits</h2>
      <p class="space__subtitle">
        Step into a warm, welcoming environment designed for your comfort and relaxation. Our treatment rooms feature natural wood elements and soothing ambiance.
      </p>
    </div>

    <div class="space__gallery">
      {images.map((image, index) => (
        <div class={`space__image-wrapper space__image-wrapper--${index + 1}`}>
          <img src={image.src} alt={image.alt} class="space__image" />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .space {
    background-color: var(--color-background);
  }

  .space__header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-3xl);
  }

  .space__label {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-primary);
    margin-bottom: var(--space-md);
  }

  .space__title {
    margin-bottom: var(--space-md);
  }

  .space__subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-bottom: 0;
  }

  .space__gallery {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 200px);
    gap: var(--space-md);
  }

  .space__image-wrapper {
    overflow: hidden;
    border-radius: var(--radius-md);
    position: relative;
  }

  .space__image-wrapper--1 {
    grid-column: span 2;
    grid-row: span 2;
  }

  .space__image-wrapper--2 {
    grid-column: span 1;
    grid-row: span 1;
  }

  .space__image-wrapper--3 {
    grid-column: span 1;
    grid-row: span 1;
  }

  .space__image-wrapper--4 {
    grid-column: span 2;
    grid-row: span 1;
  }

  .space__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .space__image-wrapper:hover .space__image {
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .space__gallery {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: repeat(3, 180px);
    }

    .space__image-wrapper--1 {
      grid-column: span 2;
      grid-row: span 1;
    }

    .space__image-wrapper--4 {
      grid-column: span 2;
    }
  }

  @media (max-width: 480px) {
    .space__gallery {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(4, 200px);
    }

    .space__image-wrapper--1,
    .space__image-wrapper--4 {
      grid-column: span 1;
    }
  }
</style>
