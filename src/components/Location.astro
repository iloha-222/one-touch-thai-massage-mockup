<section id="location" class="location section">
  <div class="container">
    <div class="location__grid">
      <div class="location__content">
        <span class="location__label">Find Us</span>
        <h2 class="location__title">Where to Find Us</h2>

        <div class="location__info">
          <div class="location__item">
            <div class="location__icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div class="location__details">
              <h4>Address</h4>
              <p>1 Second Ave<br/>Toongabbie NSW 2146</p>
            </div>
          </div>

          <div class="location__item">
            <div class="location__icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
            </div>
            <div class="location__details">
              <h4>Opening Hours</h4>
              <p>Monday - Saturday<br/>9:30 AM - 8:30 PM</p>
              <p class="location__closed">Sunday: Closed</p>
            </div>
          </div>

          <div class="location__item">
            <div class="location__icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <div class="location__details">
              <h4>Contact</h4>
              <p><a href="tel:+61415458835">0415 458 835</a></p>
              <p><a href="mailto:natamonchan@gmail.com">natamonchan@gmail.com</a></p>
            </div>
          </div>
        </div>

        <a href="https://www.google.com/maps/dir//1+Second+Ave,+Toongabbie+NSW+2146" target="_blank" rel="noopener" class="btn btn--primary">
          Get Directions
        </a>
      </div>

      <div class="location__map-wrapper">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3315.0!2d150.9598851!3d-33.7893559!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6b12a0f6c7a8b8c9%3A0x1234567890abcdef!2s1%20Second%20Ave%2C%20Toongabbie%20NSW%202146!5e0!3m2!1sen!2sau!4v1234567890"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="One Touch Thai Massage Location"
          class="location__map">
        </iframe>
      </div>
    </div>
  </div>
</section>

<style>
  .location {
    background-color: var(--color-background-alt);
  }

  .location__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  .location__label {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-primary);
    margin-bottom: var(--space-md);
  }

  .location__title {
    margin-bottom: var(--space-2xl);
  }

  .location__info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
  }

  .location__item {
    display: flex;
    gap: var(--space-md);
  }

  .location__icon {
    width: 50px;
    height: 50px;
    background-color: var(--color-surface);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: var(--color-primary);
    border: 1px solid var(--color-border-light);
  }

  .location__details h4 {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text);
    margin-bottom: var(--space-xs);
  }

  .location__details p {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    margin-bottom: var(--space-xs);
    line-height: 1.5;
  }

  .location__details p:last-child {
    margin-bottom: 0;
  }

  .location__details a {
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .location__details a:hover {
    color: var(--color-primary);
  }

  .location__closed {
    color: var(--color-text-light) !important;
    font-style: italic;
  }

  .location__map-wrapper {
    height: 450px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .location__map {
    width: 100%;
    height: 100%;
  }

  @media (max-width: 992px) {
    .location__grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .location__map-wrapper {
      height: 350px;
    }
  }
</style>
